@page
@model VaskEnTidWeb.Pages.BookingModel
@{
}
<link rel="stylesheet" href="~/css/booking.css" asp-append-version="true" />

@if (Model.Edit == false)
{
    <div class="card">
        <h1>
            Booking Id: @Model.SpecificBooking.BookingID
        </h1>

        <p>
            Domicile Id: @Model.SpecificBooking.DomicileID
        </p>
        <p>
            Machine Ids
            @foreach (var i in Model.SpecificBooking.MachineIDs)
            {
                <text>@i </text>
            }
        </p>
        <p>
            Booking Tidspunkt: @Model.SpecificBooking.DateAndTime
        </p>
        <p>
            Duration: @Model.SpecificBooking.Duration
        </p>
        <p>
            TotalCost: @Model.SpecificBooking.TotalCost
        </p>
        <div>
            <form method="post" asp-page-handler="Edit">
                <input type="hidden" name="TempID" asp-for="TempID" value="@Model.SpecificBooking.BookingID" />
                <input type="hidden" name="Edit" asp-for="Edit" value="true" />
                <input type="submit" value="Edit" />
            </form>
            <form method="post" asp-page-handler="Delete">
                <input type="hidden" name="TempID" asp-for="TempID" value="@Model.SpecificBooking.BookingID" />
                <input type="submit" value="Delete" />
            </form>
        </div>
    </div>
}
else if (Model.Edit == true)
{
    <div class="card">
        <form method="post" asp-page-handler="Save">

            <h1>
                Booking Id: @Model.SpecificBooking.BookingID
            </h1>
            <p>
                Domicile Id: @Model.SpecificBooking.DomicileID
            </p>
            <p>
                Machine Ids
                @foreach (var i in Model.SpecificBooking.MachineIDs)
                {
                    <text>@i </text>
                }
            </p>
            <p>
                Booking Tidspunkt: <input type="text" name="TempDateAndTime" asp-for="TempDateAndTime" value="@Model.SpecificBooking.DateAndTime" />
            </p>
            <p>
                Duration: @Model.SpecificBooking.Duration
            </p>
            <p>
                TotalCost: @Model.SpecificBooking.TotalCost
            </p>
            <p>
                
            </p>
            <input type="hidden" name="TempID" asp-for="TempID" value="@Model.SpecificBooking.BookingID" />
            <input type="submit" value="Save Blog" />
        </form>
        <form method="post" asp-page-handler="Cancel">
            <input type="hidden" name="TempID" asp-for="TempID" value="@Model.SpecificBooking.BookingID" />
            <input type="hidden" name="Edit" asp-for="Edit" value="false" />
            <input type="submit" value="Cancel" />
        </form>
    </div>
    
}
